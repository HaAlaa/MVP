<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>


    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/alpha_gray</item>
        <item name="colorControlActivated">@color/app_sky_blue</item>
        <item name="colorControlHighlight">@color/app_sky_blue</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/star_gold</item>
        <item name="colorControlNormal">@color/star_gold</item>
    </style>

</resources>
